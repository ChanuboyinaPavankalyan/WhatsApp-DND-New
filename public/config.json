{
  "workflowApiVersion": "1.1",
  "type": "REST",
  "metaData": {
    "icon": "https://customactivity003-production.up.railway.app/icon.png",
    "category": "custom"
  },
  "applicationExtensionKey": "aethereus.daytime.window.check",
  "lang": {
    "en-US": {
      "name": "Daytime Window Check",
      "description": "Checks if current time is within allowed sending window"
    }
  },
  "arguments": {
    "execute": {
      "inArguments": [
        {
          "subscriberKey": "{{Contact.Key}}"
        },
        {
          "country": "{{Activity.country}}"
        }
      ],
      "outArguments": [
        {
          "isWithinWindow": ""
        },
        {
          "currentHour": ""
        }
      ],
      "url": "https://customactivity003-production.up.railway.app/activity/execute",
      "verb": "POST",
      "format": "json",
      "useJwt": true,
      "timeout": 30000,
      "retryCount": 5,
      "retryDelay": 1000,
      "concurrentRequests": 8
    }
  },
  "configurationArguments": {
    "save": {
      "url": "https://customactivity003-production.up.railway.app/activity/save",
      "verb": "POST",
      "format": "json",
      "useJwt": true
    },
    "publish": {
      "url": "https://customactivity003-production.up.railway.app/activity/publish",
      "verb": "POST",
      "format": "json",
      "useJwt": true
    },
    "validate": {
      "url": "https://customactivity003-production.up.railway.app/activity/validate",
      "verb": "POST",
      "format": "json",
      "useJwt": true
    },
    "stop": {
      "url": "https://customactivity003-production.up.railway.app/activity/stop",
      "verb": "POST",
      "format": "json",
      "useJwt": true
    }
  },
  "userInterfaces": {
    "configModal": {
      "url": "https://customactivity003-production.up.railway.app/index.html",
      "height": 600,
      "width": 600
    }
  },
  "schema": {
    "arguments": {
      "execute": {
        "inArguments": [
          {
            "name": "subscriberKey",
            "dataType": "Text",
            "direction": "in"
          },
          {
            "name": "country",
            "dataType": "Text",
            "direction": "in"
          }
        ],
        "outArguments": [
          {
            "name": "isWithinWindow",
            "dataType": "Boolean",
            "direction": "out"
          },
          {
            "name": "currentHour",
            "dataType": "Number",
            "direction": "out"
          }
        ]
      }
    }
  }
}