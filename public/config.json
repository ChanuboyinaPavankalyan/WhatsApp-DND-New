{
  "workflowApiVersion": "1.1",
  "metaData": {
    "icon": "https://whatsapp-dnd-custom.vercel.app/icon.png",
    "category": "custom"
  },
  "type": "REST",

  "lang": {
    "en-US": {
      "name": "Daytime Window Check",
      "description": "Validates daytime sending window by country"
    }
  },

"arguments": {
  "execute": {
    "inArguments": [
      {
        "country": "{{Contact.Attribute.Default.Country}}"
      }
    ],
    "outArguments": [
      { "isWithinWindow": "" },
      { "currentHour": "" }
    ],
    "url": "https://whatsapp-dnd-custom.vercel.app/activity/execute",
    "verb": "POST",
    "body": {},
    "header": {},
    "format": "json",
    "useJwt": true,
    "timeout": 20000,
    "retryCount": 3,
    "retryDelay": 1000,
    "concurrentRequests": 6
  }
},


  "configurationArguments": {
    "save": {
      "url": "https://whatsapp-dnd-custom.vercel.app/activity/save",
      "verb": "POST",
      "format": "json"
    },
    "publish": {
      "url": "https://whatsapp-dnd-custom.vercel.app/activity/publish",
      "verb": "POST",
      "format": "json"
    },
    "validate": {
      "url": "https://whatsapp-dnd-custom.vercel.app/activity/validate",
      "verb": "POST",
      "format": "json"
    },
    "stop": {
      "url": "https://whatsapp-dnd-custom.vercel.app/activity/stop",
      "verb": "POST",
      "format": "json"
    }
  },

  "userInterfaces": {
    "configModal": {
      "url": "https://whatsapp-dnd-custom.vercel.app/index.html",
      "height": 450,
      "width": 450
    }
  },

  "schema": {
    "arguments": {
      "execute": {
        "inArguments": [
          {
            "country": {
              "dataType": "Text",
              "isNullable": false,
              "direction": "in"
            }
          }
        ],
        "outArguments": [
          {
            "isWithinWindow": {
              "dataType": "Boolean",
              "isNullable": false,
              "direction": "out"
            }
          },
          {
            "currentHour": {
              "dataType": "Number",
              "isNullable": false,
              "direction": "out"
            }
          }
        ]
      }
    }
  }
}







