{
  "workflowApiVersion": "1.1",
  "metaData": {
    "icon": "https://customactivity003-production.up.railway.app/icon.png",
    "category": "custom"
  },
  "type": "REST",

  "lang": {
    "en-US": {
      "name": "Daytime Window Check",
      "description": "Validates daytime sending window by country"
    }
  },

  "arguments": {
    "execute": {
 "inArguments":[{"country":"Germany"}],
      "outArguments": [
        { "isWithinWindow": "" },
        { "currentHour": "" }
      ],
      "url": "https://customactivity003-production.up.railway.app/activity/execute",
      "verb": "POST",
      "body": "",
      "header": "",
      "format": "json",
      "useJwt": true,
      "timeout": 20000,
      "retryCount": 3,
      "retryDelay": 1000,
      "concurrentRequests": 6
    }
  },

  "configurationArguments": {
    "save": {
      "url": "https://customactivity003-production.up.railway.app/activity/save",
      "format": "json",
      "useJwt": true
    },
    "publish": {
      "url": "https://customactivity003-production.up.railway.app/activity/publish",
      "format": "json",
      "useJwt": true
    },
    "validate": {
      "url": "https://customactivity003-production.up.railway.app/activity/validate",
      "format": "json",
      "useJwt": true
    },
    "stop": {
      "url": "https://customactivity003-production.up.railway.app/activity/stop",
      "format": "json",
      "useJwt": true
    }
  },

  "userInterfaces": {
    "configModal": {
      "url": "https://customactivity003-production.up.railway.app/index.html",
      "height": 450,
      "width": 450
    }
  },

  "schema": {
    "arguments": {
      "execute": {
        "inArguments": [
          {
            "country": {
              "dataType": "Text",
              "isNullable": false,
              "direction": "in"
            }
          }
        ],
        "outArguments": [
          {
            "isWithinWindow": {
              "dataType": "Boolean",
              "isNullable": false,
              "direction": "out"
            }
          },
          {
            "currentHour": {
              "dataType": "Number",
              "isNullable": false,
              "direction": "out"
            }
          }
        ]
      }
    }
  }
}


